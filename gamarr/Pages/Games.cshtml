@page
@model gamarr.Pages.GamesModel
@{
    ViewData["Title"] = "Game Library";
}

<h1>Game Library</h1>

<div class="grid-view">
    <!-- Dynamic game cards will populate here -->
</div>

<script>
    fetch('/api/game')
        .then(response => response.json())
        .then(data => {
            const gridView = document.querySelector('.grid-view');
            gridView.innerHTML = data.map(game => `
                <div class="game-card">
                    <img src="${game.coverImage || '/images/game-cover-placeholder.png'}" alt="Game Cover">
                    <div class="info">
                        <h3>${game.title}</h3>
                        <p>Platform: ${game.platform}</p>
                        <p>Genre: ${game.genre}</p>
                        <p>Release Date: ${new Date(game.releaseDate).toLocaleDateString()}</p>
                    </div>
                </div>
            `).join('');
        });
</script>